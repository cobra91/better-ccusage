{
  "name": "better-ccusage",
  "version": "1.2.6",
  "description": "Enhanced usage analysis tool for Claude Code with multi-provider support",
  "homepage": "https://github.com/cobra91/better-ccusage#readme",
  "bugs": {
    "url": "https://github.com/cobra91/better-ccusage/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cobra91/better-ccusage.git"
  },
  "funding": "https://github.com/cobra91/better-ccusage?sponsor=1",
  "license": "MIT",
  "author": "cobra91",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./calculate-cost": "./src/calculate-cost.ts",
    "./data-loader": "./src/data-loader.ts",
    "./debug": "./src/debug.ts",
    "./logger": "./src/logger.ts",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "better-ccusage": "./src/index.ts"
  },
  "files": [
    "config-schema.json",
    "model_prices_and_context_window.json",
    "dist"
  ],
  "engines": {
    "node": ">=20.19.4"
  },
  "publishConfig": {
    "bin": {
      "better-ccusage": "./dist/index.js"
    },
    "exports": {
      ".": "./dist/index.js",
      "./calculate-cost": "./dist/calculate-cost.js",
      "./data-loader": "./dist/data-loader.js",
      "./debug": "./dist/debug.js",
      "./logger": "./dist/logger.js",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "generate:schema": "pnpm tsx scripts/generate-json-schema.ts",
    "build": "pnpm run generate:schema && pnpm tsdown && cp model_prices_and_context_window.json dist/",
    "prepack": "pnpm run build && pnpm clean-pkg-json"
  },
  "devDependencies": {
    "@better-ccusage/internal": "workspace:*",
    "@better-ccusage/terminal": "workspace:*",
    "@praha/byethrow": "catalog:runtime",
    "@ryoppippi/limo": "catalog:runtime",
    "clean-pkg-json": "catalog:release",
    "cli-table3": "catalog:runtime",
    "consola": "catalog:runtime",
    "get-stdin": "catalog:runtime",
    "gunshi": "catalog:runtime",
    "picocolors": "catalog:runtime",
    "tsdown": "catalog:build",
    "tsx": "^4.21.0",
    "valibot": "catalog:runtime",
    "vitest": "catalog:testing",
    "xdg-basedir": "catalog:runtime"
  }
}